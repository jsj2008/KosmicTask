\
use KosmicTaskController;\
\
# define planets array\
@planets = ("Mercury", "Venus", "Earth");\
push(@planets, "Mars");\
push(@planets, "Jupiter");\
push(@planets, "Saturn");\
push(@planets, "Uranus");\
push(@planets, "Neptune");\
\
# print native object as YAML\
KosmicTaskController->printObject(\\@planets);
